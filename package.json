{
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "root": true,
    "rules": {
      "@typescript-eslint/ban-types": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-var-requires": "warn",
      "no-var": "warn",
      "prefer-const": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "lib/",
    "public/"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{json,js,jsx,md,scss,ts,tsx,css,yml,yaml}": "prettier --write"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "overrides": {
      "esbuild": "0.26.0"
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "reset": "rm -rf apps/*/node_modules packages/*/node_modules node_modules",
    "serve": "pnpm --filter=web run preview",
    "update:dedupe": "pnpm dedupe",
    "update:latest": "pnpm -r up -i",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "pretty-quick": "^4.2.2",
    "turbo": "^2.0.0"
  }
}
