{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "eslintConfig": {
    "env": {
      "node": true
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint"
  },
  "scripts-": {
    "dev": "node server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server && cp server.js dist/",
    "preview": "cross-env NODE_ENV=production node dist/server"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sirv": "^3.0.2"
  },
  "devDependencies": {
    "@dev/web": "workspace:*",
    "@types/express": "^5.0.3",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.0.0",
    "typescript": "5.9.3",
    "vite": "^7.0.0"
  }
}
